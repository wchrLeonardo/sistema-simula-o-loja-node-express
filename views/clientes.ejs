<%- include ('partials/header.ejs') %>
    <%- include ('partials/navbar.ejs') %>

    <!-- FORMULÁRIO DE CADASTRO -->
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h1>Cadastrar Cliente</h1>
            </div>
            <div class="card-body">
                <form action="/clientes/new" method="post">
                    <label>Nome do cliente</label>
                    <input type="text" name="nome" placeholder="Nome do Cliente" class="form-control" required>
                    <label>CPF do cliente</label>
                    <input type="text" name="cpf" placeholder="Cpf do Cliente" class="form-control" required>
                    <label>Endereço do cliente</label>
                    <input type="text" name="endereco" placeholder="Endereço do Cliente" class="form-control" required>
                    <br>
                    <input type="submit" value="Cadastrar" class="btn btn-success">
                </form>
            </div>
        </div>
    </div>

        <div class="container mt-5">
            <div class="card">
                <div class="card-header">
                    <h1>Clientes</h1>
                </div>
                <div class="card-body">
                    <table>
                        <thead>
                            <tr>
                                <th></th>
                                <th>Nome:</th>
                                <th>CPF:</th>
                                <th>Endereço:</th>
                                <th colspan="2" style="text-align: center;">Ações:</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% clientes.forEach(cliente=> { %>
                                <tr>
                                    <td><img src="imgs/avatar.png" width="30px"></td>
                                    <td>
                                        <%= cliente.nome %>
                                    </td>
                                    <td>
                                        <%= cliente.cpf %>
                                    </td>
                                    <td>
                                        <%= cliente.endereco %>
                                    </td>
                                    <td><a href="/clientes/edit/<%= cliente.id%>" onclick="return confirm('Deseja mesmo alterar o cliente <%= cliente.nome%>?')" class="btn btn-warning">Editar</a></td>
                                    <td><a href="/clientes/delete/<%= cliente.id%>" onclick="return confirm('Deseja mesmo excluir o cliente <%= cliente.nome%>?')" class="btn btn-danger">Excluir</a></td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <%- include ('partials/footer.ejs') %>